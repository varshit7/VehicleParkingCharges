<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:background="@drawable/bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
           >

            <ImageView
                android:id="@+id/Veh_I"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                 />


            <TextView
                android:id="@+id/Veh_D"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:text="Duration 20Min"
                android:textColor="#333"
                android:gravity="center"
                android:textSize="12sp"
                />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:text="Vehicle number" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:background="#000"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="Amount"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Veh_N"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="KL 412A"
                    android:textColor="#005c4b"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:background="#000"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/Veh_A"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="412"
                    android:textColor="#005c4b"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#333"
                android:textStyle="bold"
                android:text="Vehicle in Time and Date"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>
             <TextView
                 android:id="@+id/Veh_InTD"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:text="18:39:22/26-Mar-2018"
                 android:textColor="#005c4b"
                 android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#333"
                android:textStyle="bold"
                android:text="Vehicle Out Time and Date"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"></View>
            <TextView
                android:id="@+id/Veh_OutTD"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="21:39:22/26-Mar-2018"
                android:textColor="#005c4b"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>